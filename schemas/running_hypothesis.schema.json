{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "running_hypothesis.schema.json",
  "title": "Running Hypothesis",
  "description": "Evolving activity hypothesis built from accumulating evidence",
  "type": "object",
  "required": ["id", "category", "first_evidence_time", "last_evidence_time", "confidence", "evidence"],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "category": {
      "type": "string"
    },
    "activity_name": {
      "type": "string"
    },
    "first_evidence_time": {
      "type": "string",
      "format": "date-time"
    },
    "last_evidence_time": {
      "type": "string",
      "format": "date-time"
    },
    "estimated_start_time": {
      "type": "string",
      "format": "date-time"
    },
    "estimated_duration": {
      "type": "number",
      "minimum": 0,
      "description": "Estimated duration in minutes"
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "crystallization_threshold": {
      "type": "number",
      "default": 0.7
    },
    "evidence": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Clue IDs supporting this hypothesis"
    },
    "notes": {
      "type": "array",
      "items": {"type": "string"}
    }
  }
}